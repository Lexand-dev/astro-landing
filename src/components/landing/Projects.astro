---
import { projects } from '../../config/projects.json';
---
<h2 class="font-bold text-5xl my-10 text-center">Projects</h2>

{
    projects.map((project) => (
        <div class="flex flex-col mb-2 md:text-left text-center md:flex-row">
            <div class="flex-1 py-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="text-gray-500 my-2">{project.description}</p>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72 m-auto">
            </div>
        </div>
    ))
}